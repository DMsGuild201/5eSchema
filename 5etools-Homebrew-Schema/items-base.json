{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "items-base.json",
	"version": "1.4.5",
	"definitions": {
		"itemLookup": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"abbreviation": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"name": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"template": {
						"$comment": "Note that this is not used on item types.",
						"type": "string"
					}
				},
				"required": [
					"abbreviation",
					"source",
					"page"
				],
				"additionalProperties": false
			}
		}
	},
	"type": "object",
	"properties": {
		"baseitem": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"type": {
						"$ref": "util.json#/definitions/itemTypeTags"
					},
					"rarity": {
						"$ref": "util.json#/definitions/itemRarity"
					},
					"source": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"ac": {
						"type": "integer"
					},
					"age": {
						"type": "string",
						"examples": ["futuristic", "modern", "renaissance"]
					},
					"armor": {
						"description": "Flag used when merging generic variants",
						"type": "boolean"
					},
					"axe": {
						"type": "boolean"
					},
					"ammunition": {
						"type": "boolean",
						"description": "An item that uses ammunition; not an item that is ammunition."
					},
					"dmg1": {
						"type": "string"
					},
					"dmg2": {
						"type": "string"
					},
					"dmgType": {
						"$ref": "util.json#/definitions/dataDamageTags"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"property": {
						"type": "array",
						"description": "2H: Two-Handed\n A: Ammunition\n AF: Ammunition (futuristic)\n BF: Burst Fire\n EM: Eldritch Machine\n F: Finesse\n H: Heavy\n L: Light\n LD: Loading\n OTH: Other\n R: Reach\n RLD: Reload\n S: Special\n T: Thrown\n V: Versatile",
						"items": {
							"type": "string",
							"examples": ["2H", "A", "AF", "BF", "EM", "F", "H", "L", "LD", "OTH", "R", "RLD", "S", "T", "V"]
						}
					},
					"range": {
						"type": "string"
					},
					"reload": {
						"type": "integer"
					},
					"scfType": {
						"type": "string",
						"examples": ["arcane", "druid", "holy"]
					},
					"stealth": {
						"type": "boolean"
					},
					"strength": {
						"type": "string"
					},
					"sword": {
						"type": "boolean"
					},
					"mace": {
						"type": "boolean"
					},
					"spear": {
						"type": "boolean"
					},
					"hammer": {
						"type": "boolean"
					},
					"bow": {
						"type": "boolean"
					},
					"crossbow": {
						"type": "boolean"
					},
					"club": {
						"type": "boolean"
					},
					"dagger": {
						"type": "boolean"
					},
					"net": {
						"type": "boolean"
					},
					"firearm": {
						"type": "boolean"
					},
					"staff": {
						"description": "Adds the italicized \"Staff\" text to the item info line (below the name).",
						"type": "boolean"
					},
					"value": {
						"description": "In copper pieces.",
						"type": "number"
					},
					"currencyConversion": {
						"description": "ID of a value conversion table. Homebrew only.",
						"type": "string"
					},
					"valueMult": {
						"type": "number"
					},
					"weapon": {
						"type": "boolean"
					},
					"weaponCategory": {
						"type": "string",
						"examples": ["simple", "martial"]
					},
					"weight": {
						"type": "number"
					},
					"weightMult": {
						"type": "number"
					},
					"quantity": {
						"type": "integer"
					},
					"srd": {
						"$ref": "util.json#/definitions/srd"
					},
					"otherSources": {
						"$ref": "util.json#/definitions/otherSources"
					},
					"ammoType": {
						"type": "string",
						"examples": ["energy cell", "modern bullet", "blowgun needle|phb", "crossbow bolt|phb", "arrow|phb", "renaissance bullet", "sling bullet|phb"]
					},
					"packContents": {
						"type": "array",
						"items": {
							"oneOf": [
								{
									"type": "string"
								},
								{
									"type": "object",
									"properties": {
										"special": {
											"type": "string"
										},
										"quantity": {
											"type": "integer"
										}
									},
									"additionalProperties": false,
									"required": ["special"]
								},
								{
									"type": "object",
									"properties": {
										"item": {
											"type": "string"
										},
										"quantity": {
											"type": "integer"
										}
									},
									"additionalProperties": false,
									"required": ["item", "quantity"]
								}
							]
						}
					},
					"hasFluff": {"type": "boolean"},
					"hasFluffImages": {"type": "boolean"}
				},
				"required": [
					"name",
					"type",
					"rarity",
					"source",
					"page"
				],
				"additionalProperties": false
			}
		},
		"itemProperty": {
			"$ref": "#/definitions/itemLookup"
		},
		"itemType": {
			"$ref": "#/definitions/itemLookup"
		},
		"itemEntry": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"source": {"type": "string"},
					"entriesTemplate": {
						"type": "array",
						"items": {"$ref": "entry.json"}
					}
				}
			}
		},
		"itemTypeAdditionalEntries": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"appliesTo": {
						"type": "string"
					},
					"entries": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"additionalProperties": false
			}
		}
	}
}
