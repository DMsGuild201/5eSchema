{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "deities.json",
	"version": "1.1.4",
	"type": "object",

	"definitions": {
		"deityData": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"reprintAlias": {
					"type": "string"
				},
				"alignment": {
					"type": "array",
					"description": "L: Lawful\n N: Neutral\n C: Chaotic\n G: Good\n E: Evil",
					"items": {
						"type": "string",
						"enum": ["L", "N", "C", "G", "E"]
					}
				},
				"title": {
					"type": "string"
				},
				"pantheon": {
					"oneOf": [
						{
							"type": "string",
							"enum": [
								"Celtic",
								"Dawn War",
								"Dragonlance",
								"Drow",
								"Duergar",
								"Dwarven",
								"Eberron",
								"Egyptian",
								"Elven",
								"Exandria",
								"Faer√ªnian",
								"Forgotten Realms",
								"Gnome",
								"Gnomish",
								"Greek",
								"Greyhawk",
								"Halfling",
								"Nonhuman",
								"Norse",
								"Orc",
								"Theros",
								"Unknown"
							]
						},
						{
							"type": "string"
						}
					]
				},
				"category": {
					"type": "string"
				},
				"domains": {
					"anyOf": [
						{
							"type": "array",
							"items": {
								"type": "string",
								"enum": [
									"Arcana", "Death","Forge", "Grave", "Knowledge", "Life", "Light", "Nature", "None", "Order", "Peace", "Tempest", "Trickery", "Twilight", "Unknown", "War"
								]
							}
						},
						{
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					]
				},
				"province": {
					"description": "The nouveau form of 'title,' first seen in MTF",
					"type": "string"
				},
				"symbol": {
					"type": "string"
				},
				"customProperties": {
					"description": "For homebrew use only; a key-value dict of the form: `\"Typical Worshipers\": \"Half-elf Bards\"`",
					"type": "object"
				},
				"source": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"page": {
					"type": "integer"
				},
				"additionalSources": {
					"$ref": "util.json#/definitions/additionalSources"
				},
				"altNames": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"symbolImg": {
					"$ref": "entry.json#/definitions/entryImage"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"customExtensionOf": {
					"type": "string"
				},
				"piety": {"type": "boolean"}
			},
			"additionalProperties": false
		},

		"deity": {
			"anyOf": [
				{
					"allOf": [
						{
							"$ref": "#/definitions/deityData"
						},
						{
							"required": [
								"name",
								"pantheon",
								"source"
							]
						}
					]
				},
				{
					"allOf": [
						{
							"$ref": "#/definitions/deityData"
						},
						{
							"$ref": "util.json#/definitions/copyBlock"
						}
					]
				}
			]
		}
	},

	"properties": {
		"deity": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/deity"
			}
		},
		"_meta": {
			"$ref": "util.json#/definitions/metaBlock"
		}
	}
}
